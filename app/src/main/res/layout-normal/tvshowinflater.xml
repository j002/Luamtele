<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:focusable="false">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="77dp"
            android:layout_marginBottom="1dp"
            android:background="#000"
            android:padding="10dp"
                     >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 12:00 - 12:20"
                android:id="@+id/hourbroadcast"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#d2d2d2"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/idlike"
                android:src="@drawable/like"
                android:contentDescription="e"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="false"
            android:background="#000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de l'Ã©mission"
                android:id="@+id/tvShowName"
                android:textStyle="bold"
                android:ellipsize="middle"
                android:textSize="20dp"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:id="@+id/type"
                android:textSize="15dp"
                android:textColor="#999999"
                android:layout_below="@+id/tvShowName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_toRightOf="@+id/type"
                android:layout_alignTop="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:id="@+id/textView4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15dp"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignTop="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 min"
                android:id="@+id/duration"
                android:textSize="15dp"
                android:textColor="#999999"
                android:textStyle="bold" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvShowName"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/channellogo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noter"
                android:src="@drawable/note"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/duration"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4"
                android:id="@+id/note"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignBottom="@+id/noter"
                android:layout_below="@+id/channellogo"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginRight="2dp"
                android:layout_above="@+id/noter"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="/"
                android:id="@+id/textView5"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/noter"
                android:layout_toRightOf="@+id/note"
                android:layout_toEndOf="@+id/note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5"
                android:id="@+id/sur"
                android:layout_alignTop="@+id/note"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:layout_alignBottom="@+id/noter"
                android:layout_below="@+id/channellogo"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_above="@+id/noter" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:id="@+id/textView6"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello World !"
        android:id="@+id/tvShowDecription"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#434343"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:background="#c9c7c7"/>
</LinearLayout>